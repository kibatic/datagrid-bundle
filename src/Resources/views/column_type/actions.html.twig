{% set actions = value %}

<ul class="list-inline mb-0">
{% for action in value %}
    {% if action.visible is not defined or action.visible %}
        <li>
            <a href="{{ action.url }}" class="btn btn-{{ action.btn_size|default('sm') }} btn-{{ action.btn_type|default('default') }}">
                {% if action.icon_class is defined %}<span class="{{ action.icon_class }}"></span>{% endif %}
                {{ action.name|trans }}
            </a>
        </li>
    {% endif %}
{% endfor %}
</ul>
